@{
    ViewBag.Title = "Agregar Deportista";
}

<head>
    <link rel="stylesheet" href="~/css/agregarDeportista.css" asp-append-version="true" />
</head>
<div class="form-container">
    <h2>Agregar Deportista</h2>
    <form action="@Url.Action("GuardarDeportista", "Home")" method="post">
        <div class="form-group">
            <label for="Apellido">Apellido:</label>
            <input type="text" id="Apellido" name="Apellido" required />
        </div>
        <div class="form-group">
            <label for="Nombre">Nombre:</label>
            <input type="text" id="Nombre" name="Nombre" required />
        </div>
        <div class="form-group">
            <label for="FechaNacimiento">Fecha de Nacimiento:</label>
            <input type="date" id="FechaNacimiento" name="FechaNacimiento" required />
        </div>
        <div class="form-group">
            <label for="Foto">Foto (URL):</label>
            <input type="text" id="Foto" name="Foto" required />
        </div>
        <div class="form-group">
            <label for="IdPais">País:</label>
            <select id="IdPais" name="IdPais" required>
                <option value="">Seleccione un país</option>
                @foreach (Pais pais in ViewBag.ListadoPaises)
                {
                    <option value="@pais.IdPais">@pais.Nombre</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="IdDeporte">Deporte:</label>
            <select id="IdDeporte" name="IdDeporte" required>
                <option value="">Seleccione un deporte</option>
                @foreach (Deporte deporte in ViewBag.ListadoDeportes)
                {
                    <option value="@deporte.IdDeporte">@deporte.Nombre</option>
                }
            </select>
        </div>
        <button type="submit" class="btn-submit">Guardar</button>
    </form>
</div>
