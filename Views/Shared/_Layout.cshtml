<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] JJOO</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="@Url.Action("Index", "Home")">
                <img src="~/img/jjoo-logo.png" alt="JJOO Logo" class="logo-dimensions me-2" />
                JJOO
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Historia", "Home")">Historia</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Deportes", "Home")">Deportes</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Paises", "Home")">Países</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("AgregarDeportista", "Home")">Agregar Deportista</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Creditos", "Home")">Créditos</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 p-5 rounded-3 bg-custom">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white py-5 mt-5 gradient-background">
        <div>
            <div class="d-flex justify-content-evenly">
                <div class="md-3">
                    <img src="~/img/jjoo-logo.png" alt="Olympic Logo" class="footer-logo">
                </div>
                <div class="md-2">
                    <h5 class="mb-4 text-muted">© 2024 JJOO - Todos los derechos reservados</h5>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
