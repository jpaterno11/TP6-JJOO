<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>     
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="@Url.Action("Index", "Home")">
                <img src="~/img/jjoo-logo.png" alt="JJOO Logo" class="me-2" style="width: 50px; height: 50px;" />
                JJOO
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Historia", "Home")">Historia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Deportes", "Home")">Deportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Paises", "Home")">Países</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("AgregarDeportista", "Home")">Agregar Deportista</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Creditos", "Home")">Créditos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container bg-light rounded-3 mt-5 p-5 shadow-sm">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-secondary text-light text-center py-4 mt-5">
        <div class="container">
            <p class="mb-1">© 2024 JJOO - Todos los derechos reservados</p>
            <p class="mb-0">
                <a href="@Url.Action("Creditos", "Home")" class="text-light text-decoration-none">Créditos</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
